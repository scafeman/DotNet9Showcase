@page
@model DotNet9Showcase.Pages.Products.IndexModel
@{
    ViewData["Title"] = "Product List";
}

<style>
    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 1rem;
    }
    th, td {
        border: 1px solid #ccc;
        padding: 10px;
        text-align: left;
    }
    th {
        background-color: #f0f0f0;
    }
    a.btn-action {
        margin-right: 6px;
    }
</style>

<h1>Products</h1>

<a asp-page="./Create" class="btn btn-primary mb-3">+ Add New Product</a>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Image</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model.Products)
        {
            <tr>
                <td>@p.Name</td>
                <td>$@p.Price</td>
                <td>
                    @if (!string.IsNullOrEmpty(p.ImagePath))
                    {
                        <img src="@p.ImagePath" style="max-height: 60px;" />
                    }
                </td>

                <td>@p.CreatedAt.ToString("g")</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@p.Id" class="btn-action btn btn-sm btn-warning">Edit</a>
                    <a asp-page="./Delete" asp-route-id="@p.Id" class="btn-action btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
